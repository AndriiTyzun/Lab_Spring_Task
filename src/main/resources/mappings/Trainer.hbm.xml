<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ua.laboratory.lab_spring_task.Model.Trainer" table="Trainer">
        <id name="id" column="ID">
            <generator class="identity"/>
        </id>
        <many-to-one name="specialization" class="ua.laboratory.lab_spring_task.Model.TrainingType"
                     cascade="delete" lazy="false"/>
        <one-to-one name="user" class="ua.laboratory.lab_spring_task.Model.User"
                    cascade="delete"/>
        <set name="trainees" table="Trainer_Trainee" cascade="all">
            <key column="Trainer_ID"/>
            <many-to-many column="Trainee_ID" class="ua.laboratory.lab_spring_task.Model.Trainee"/>
        </set>
    </class>
</hibernate-mapping>